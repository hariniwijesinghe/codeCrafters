<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultsFragment">

    <EditText
        android:id="@+id/search_edittext"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_outline"
        android:drawableEnd="@drawable/baseline_search_24"
        android:drawablePadding="8dp"
        android:hint="@string/search_for_clothing"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:importantForAutofill="no"
        android:textStyle="bold" />
    <!-- Map Fragment -->
    <fragment
        android:id="@+id/fragment"
        android:name="com.example.clothing.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_below="@id/search_edittext"
        android:layout_centerHorizontal="true" />


    <!-- Filter Icon and Sorting Buttons -->
    <RelativeLayout
        android:id="@+id/filter_sort_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment"
        android:layout_marginTop="6dp"
        android:layout_marginStart="100dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/profile_image"
            android:src="@drawable/baseline_filter_alt_24" />

        <Button
            android:id="@+id/button_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/filter_icon"
            android:text="@string/open" />

        <Button
            android:id="@+id/button_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/button_open"
            android:text="@string/ratings" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/filter_sort_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

                <!-- Store Item Layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp">

                    <!-- Store Picture (Left Align) -->
                    <ImageView
                        android:id="@+id/store_picture_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/shop_1"
                        android:contentDescription="@string/my_collection"
                        android:scaleType="centerCrop" />

                    <!-- Store Details (Right Align) -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/store_picture_1"
                        android:layout_marginStart="16dp"
                        android:gravity="end">


                    <!-- Store Name -->
                        <TextView
                            android:id="@+id/store_name_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/store_name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Total Review Count -->
                        <TextView
                            android:id="@+id/total_review_count_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/store_name_1"
                            android:text="@string/total_reviews_100"
                            android:textSize="16sp" />

                        <!-- Star Rating -->
                        <RatingBar
                            android:id="@+id/star_rating_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/total_review_count_1"
                            android:numStars="5"
                            android:stepSize="0.1"
                            android:rating="4.5" />

                        <!-- Store Description -->
                        <TextView
                            android:id="@+id/store_description_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/star_rating_1"
                            android:text="@string/store_description"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </RelativeLayout>

                <!-- Repeat this layout for each store item -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <!-- Store Picture (Left Align) -->
                    <ImageView
                        android:id="@+id/store_picture_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/shop_2"
                        android:contentDescription="@string/clothing_name"
                        android:scaleType="centerCrop" />

                    <!-- Store Details (Right Align) -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/store_picture_2"
                        android:layout_marginStart="16dp"
                        android:gravity="end">

                        <!-- Store Name -->
                        <TextView
                            android:id="@+id/store_name_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/store_name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Total Review Count -->
                        <TextView
                            android:id="@+id/total_review_count_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/store_name_2"
                            android:text="@string/total_reviews_100"
                            android:textSize="16sp" />

                        <!-- Star Rating -->
                        <RatingBar
                            android:id="@+id/star_rating_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/total_review_count_2"
                            android:numStars="5"
                            android:stepSize="0.1"
                            android:rating="4.5" />

                        <!-- Store Description -->
                        <TextView
                            android:id="@+id/store_description_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/star_rating_2"
                            android:text="@string/store_description"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

    </ScrollView>

</RelativeLayout>