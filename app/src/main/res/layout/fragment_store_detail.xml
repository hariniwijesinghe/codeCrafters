<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".StoreDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Store Picture (Left Align) -->
        <ImageView
            android:id="@+id/store_picture_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop_1" />

        <!-- Store Details (Right Align) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/store_picture_1"
            android:gravity="end">

            <!-- Store Name -->
            <TextView
                android:id="@+id/store_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Total Review Count -->
            <TextView
                android:id="@+id/total_review_count_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/store_name_1"
                android:text="Total Reviews: 100"
                android:textSize="16sp" />

            <!-- Star Rating -->
            <RatingBar
                android:id="@+id/star_rating_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_review_count_1"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.1" />


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Each menu item can be a Button or TextView -->
        <Button
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"/>

        <!-- Add other menu items here -->

        <Button
            android:id="@+id/add_review_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Review"/>


    </LinearLayout>

    <!-- Get Direction Button -->
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="374dp"
        android:layout_height="252dp"
        android:layout_marginTop="260dp" />

    <Button
        android:id="@+id/get_direction_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/get_direction"
        android:layout_marginTop="520dp"/>

</RelativeLayout>